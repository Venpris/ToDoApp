<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/darker_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <item name="colorOnBackground">@color/dark_gray</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <item name="colorOnSurfaceVariant">@color/dark_gray</item>
        <item name="materialAlertDialogTheme">@style/DialogStyle</item>
    </style>

    <style name="TextAppearance.AppCompat.Title" parent="TextAppearance.AppCompat">
        <item name="fontFamily">roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="SubtitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_semi_bold</item>
    </style>

    <style name="Widget.Material3.Button.TextButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TaskTitle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="fontFamily">roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubtaskText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textAlignment">viewStart</item>"
        <item name="fontFamily">@font/roboto_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonAdd" parent="Base.Widget.Material3.FloatingActionButton.Large">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="backgroundTint">@color/light_blue</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="srcCompat">@drawable/ic_material_add</item>
        <item name="maxImageSize">40dp</item>
        <item name="fabCustomSize">80dp</item>"
    </style>

    <style name="BoldButton" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/roboto_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="backgroundTint">@color/light_blue</item>"
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="SetDateTimeButton" parent="Widget.Material3.Button.TextButton">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="fontFamily">roboto</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
    </style>

    <style name="DatePickerTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <item name="materialCalendarStyle">@style/DatePickerStyle</item>
    </style>

    <style name="DatePickerStyle" parent="Widget.Material3.MaterialCalendar">
        <item name="dayTodayStyle">@style/DatePickerToday</item>
        <item name="daySelectedStyle">@style/DatePickerSelectedDate</item>
        <item name="yearTodayStyle">@style/DatePickerCurrentYear</item>
    </style>

    <style name="DatePickerToday" parent="Widget.Material3.MaterialCalendar.Day.Today">
        <item name="itemTextColor">@color/blue</item>
        <item name="itemStrokeColor">@color/blue</item>
    </style>

    <style name="DatePickerSelectedDate" parent="Widget.Material3.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/blue</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="DatePickerCurrentYear" parent="Widget.Material3.MaterialCalendar.Year.Today">
        <item name="itemTextColor">@color/blue</item>
    </style>

    <style name="TimePickerTheme" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="materialClockStyle">@style/ClockStyle</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="materialButtonOutlinedStyle">@style/TimePickerButton</item>
    </style>

    <style name="TimePickerButton" parent="Widget.Material3.MaterialTimePicker.Button">
        <item name="backgroundTint">@color/time_picker_toggle_color</item>
    </style>

    <style name="ChipStyle" parent="Widget.Material3.MaterialTimePicker.Display">
        <item name="chipBackgroundColor">@color/time_picker_display_color</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="rippleColor">@color/light_blue</item>
    </style>

    <style name="ClockStyle" parent="Widget.Material3.MaterialTimePicker.Clock">
        <item name="clockHandColor">@color/blue</item>
    </style>

    <style name="DialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp" />
</resources>